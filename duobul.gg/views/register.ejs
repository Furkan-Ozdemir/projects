<%- include('partials/header') %>
    <section id="signUp" class="register-signup">
        <div class="container-fluid sign-up">
            <header>
                <h3>Kayıt Ol</h3>
            </header>
            <form action="/register" method="POST">
                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="col-lg-4">

                        <div class="form-group">
                            <input type="email" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Enter email" name="username" />
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">

                            <a href="">Kullanım Koşullarını Kabul Ediyorum</a>
                        </div>
                        <div class="form-group">
                            <p>
                                Zaten Üye Misin
                                <a style="color: #428bca" href="/login">Giriş Yap</a>
                            </p>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-dark btn-lg">Kayıt Ol</button>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <input type="password" class="form-control" id="exampleInputPassword1"
                                placeholder="Password" name="password" />
                        </div>


                    </div>
                    <div class="col-lg-2"></div>
                </div>
            </form>
        </div>
    </section>
    <%- include('partials/footer') %>